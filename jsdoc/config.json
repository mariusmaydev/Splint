{
    "opts": {
        "recurse": true,
        "template": "templates/default"
    },
    "plugins": [
        "plugins/escapeHtml", 
        "plugins/summarize", 
        "plugins/markdown"
    ],
    "recurseDepth": 20,
    "source": {
        "include": ["js/Utils"],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "sourceType": "script",
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc","closure"]
    },
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true,
        "default": {
            "outputSourceFiles": false,
            "useLongnameInNav" : false
        }
    }
}
